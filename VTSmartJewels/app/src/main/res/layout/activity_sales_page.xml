<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">
        <LinearLayout
        android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:background="#710000"
            android:orientation="horizontal" >


        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/row1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"

                android:text="Bill No."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/blt1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"

                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnget"
                android:onClick="showSales"
                android:layout_width="100dp"
                android:layout_marginLeft="20dp"
                android:layout_height="35dp"
                android:text="GET"
                android:background="@drawable/btnpress"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/sbtnnew"

                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:text="NEW"
                android:background="@drawable/btnpress"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/blt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="dd/MM/yyyy"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/blt3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:textAllCaps="true"
                android:text=""
                android:hint="CustomerName"
                android:inputType="textCapCharacters"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/row10"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/row2"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/bd1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/bd2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:text="CatNo"
            android:textColor="#FFFF00"
            android:textStyle="bold"

            android:textSize="24sp" />

        <TextView
            android:id="@+id/bd2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/bd1"
            android:text="SlNo"
            android:textColor="#FFFF00"
            android:textStyle="bold"

            android:textSize="24sp" />

        <TextView
            android:id="@+id/bd3"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/bd2"
            android:text="Perticulers"
            android:textColor="#FFFF00"
            android:textStyle="bold"

            android:textSize="24sp" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Weight"
            android:id="@+id/bd4"
            android:textColor="#FFFF00"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/bd3"
            android:gravity="right"
            android:textSize="24sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row7"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/row10"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            >

            <ListView
                android:id="@+id/soldItms"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:choiceMode="singleChoice"
                android:fadingEdgeLength="5sp"
                android:minHeight="45dp"
                android:dividerHeight="0.000001dp"
                android:divider="#555555"
                android:smoothScrollbar="true">

            </ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/row7"
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/slt5"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="No"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@drawable/edittextbg"
                android:textColorHint="#666666"
                 />

            <AutoCompleteTextView
                android:id="@+id/slt3"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="Item Name"
                android:layout_marginLeft="10dp"
                android:inputType="textCapCharacters"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@drawable/edittextbg"
                android:textColorHint="#666666">

                <requestFocus />
            </AutoCompleteTextView   >

            <EditText
                android:id="@+id/slt4"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="Weight"
                android:inputType="numberDecimal"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@drawable/edittextbg"
                android:textColorHint="#666666"/>

            <Button
                android:id="@+id/sbtnsub"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:text="NEXT"
                android:onClick="saveSalitems"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btnpress"
                android:textSize="18sp"
                android:textStyle="bold"
                 />

            <Button
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:text="EDIT"
                android:onClick="editSalitems"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btnpress"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/sbtnedt" />

            <Button
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="CLEAR"
                android:onClick="clearSalitems"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btnpress"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/sbtnclr" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/row3"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >


            <EditText
                android:id="@+id/blt4"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="Total Weight"
                android:inputType="numberDecimal"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@drawable/edittextbg"
                android:textColorHint="#666666" />

            <EditText
                android:id="@+id/blt5"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="%age"
                android:inputType="numberDecimal"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@drawable/edittextbg"
                android:textColorHint="#666666"/>

            <EditText
                android:id="@+id/blt6"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="Fine"
                android:inputType="numberDecimal"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@drawable/edittextbg"
                android:textColorHint="#666666"/>

            <Button
                android:id="@+id/sbtnsav"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:text="SAVE"
                android:onClick="saveSalitems"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btnpress"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/sbtnadd"
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:text="+ WEIGHT"
                android:onClick="saveSalitems"
                android:layout_marginLeft="27dp"
                android:background="@drawable/btnpress"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/row4"
            android:layout_marginTop="15dp"

            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FINE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="55dp"
                android:textColor="@android:color/white"
                android:id="@+id/textView4" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="Fine"
                android:inputType="numberDecimal"
                android:layout_marginLeft="5dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@drawable/edittextbg2"
                android:textColorHint="#666666"
                android:id="@+id/blt9"
                android:layout_weight="0.00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RATE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:id="@+id/textView2" />

            <EditText
                android:id="@+id/blt7"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="Rate"
                android:inputType="numberDecimal"
                android:layout_marginLeft="10dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@drawable/edittextbg2"
                android:textColorHint="#666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" AMOUNT"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:id="@+id/textView3" />

            <EditText
                android:id="@+id/blt8"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="Total Amount"
                android:inputType="numberDecimal"
                android:layout_marginLeft="10dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@drawable/edittextbg2"
                android:textColorHint="#666666"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/row5"
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:orientation="horizontal" >

            <Button
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/btnpress"
                android:text="Add Rate"
                android:onClick="addRate"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/button3" />

            <Button
                android:id="@+id/sbtgen"
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btnpress"
                android:text="Generate Bill"
                android:onClick="genBill"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sbtnprt"
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:text="PRINT"
                android:background="@drawable/btnpress"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sbtndel"
                android:onClick="showNewBilno"
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:text="DELETE BILL"
                android:background="@drawable/btnpress"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/row8"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/row6"
        android:layout_marginTop="5dp"
        android:background="#710000"
        android:orientation="horizontal" >

    </LinearLayout>

        <LinearLayout android:id="@+id/row9"
            android:layout_width="1200dp"
            android:layout_height="1200dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/row8"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:orientation="horizontal">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




                <WebView android:id="@+id/webview"
                    android:layout_width="574dp"
                    android:layout_height="14000dp"
                    android:layout_weight="0.13"
                    android:layout_marginLeft="150dip"
                    android:layout_gravity="start"
                    android:layout_marginRight="10dip"
                    android:layout_alignParentTop="true"
                    android:choiceMode="singleChoice"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp"/>
                <ImageView
                    android:id="@+id/prtPrev"
                    android:layout_width="574dp"
                    android:layout_height="14000dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dip"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/webview"/>

            </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
<!--</ScrollView>-->

